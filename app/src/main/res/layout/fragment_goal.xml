<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GoalFragment">


    <TextView
        android:id="@+id/goal_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="SAVING IS POWER"
        android:layout_marginTop="16dp"
        android:textColor="@color/backgroundColor"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/goal_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/goal_slogan"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="16dp"
        android:text="Your Goal:"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/goal_title"
        android:layout_alignTop="@id/goal_title"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/expense_track_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="48dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/expense_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Expense track"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/expense_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/expense_title"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:paddingEnd="16dp"
                android:text="Minimum spent" />

            <TextView
                android:id="@+id/expense_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/expense_label"
                android:layout_toRightOf="@id/expense_label"
                android:text="$ 0.00" />

            <TextView
                android:id="@+id/your_expense_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/expense_label"
                android:layout_alignStart="@id/expense_label"
                android:text="Your spent" />

            <TextView
                android:id="@+id/your_expense_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/expense_label"
                android:layout_alignEnd="@id/expense_value"
                android:text="$ 0.00" />

            <TextView
                android:id="@+id/expense_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/your_expense_label"
                android:text="Days left:" />

            <TextView
                android:id="@+id/expense_duration_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/your_expense_value"
                android:layout_alignEnd="@id/your_expense_value"
                android:text="3" />

        </RelativeLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Alert when your wallet less than"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableRow android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1"
                    android:text="Your limit" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$ " />

                    <EditText
                        android:id="@+id/edit_limit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="3"
                        android:textSize="12sp"
                        android:inputType="number" />
                </LinearLayout>


                <ImageButton
                    android:id="@+id/button_save_limit"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_column="2"
                    android:src="@drawable/save" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="Your balance" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$ " />

                    <TextView
                        android:id="@+id/label_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:text="300" />
                </LinearLayout>

            </TableRow>


        </TableLayout>

    </LinearLayout>


    <Button
        android:id="@+id/button_new_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/goal_title"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"

        android:backgroundTint="@color/backgroundColor"
        android:text="New Goal
" />


</RelativeLayout>